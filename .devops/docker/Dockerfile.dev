FROM platform/.devops/docker/fractal-agents/Dockerfile.base

# Install development dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    vim \
    nano \
    htop \
    && rm -rf /var/lib/apt/lists/*

# Install development Python packages
RUN pip install --no-cache-dir \
    debugpy \
    pytest \
    ipython \
    watchdog

# Copy pyproject.toml and poetry.lock for dependency installation
# Note: In actual use, the source code will be mounted as a volume
COPY pyproject.toml poetry.lock* ./

# Install all dependencies including development ones
RUN poetry install --no-root --all-extras --with dev

# Create an entrypoint script for development with hot-reload
RUN echo '#!/bin/bash\n\
echo "Installing dependencies..."\n\
cd /app\n\
poetry install --no-root --all-extras --with dev\n\
echo "Starting fractal-agents service with hot-reload..."\n\
poetry run uvicorn src.system_0.app:app --reload --host 0.0.0.0 --port 7373\n\
' > /app/entrypoint.sh && chmod +x /app/entrypoint.sh

# Set the entrypoint
ENTRYPOINT ["/app/entrypoint.sh"]

# Expose development port
EXPOSE 7373

# Health check for the development container
HEALTHCHECK --interval=30s --timeout=10s --start-period=180s --retries=3 \
  CMD curl -f http://localhost:7373/health || exit 1
